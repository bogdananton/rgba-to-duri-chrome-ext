{
  "manifest_version": 2,

  "name": "RGBA to datauri",
  "description": "This extension generates datauri.",
  "version": "0.1",

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon" : "icon.png", // Icon source: https://www.iconfinder.com/icons/79715/color_picker_icon
    "default_title": "RGBa to DATA"
  }
}